<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Frekvenční analýza textu" Height="800" Width="900"
        Background="Beige">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
                
        <Button x:Name="btnLoadFiles" Content="Sekv." Grid.Row="0" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="36" Click="btnLoadFiles_Click"/>

        <Button x:Name="btnParallel1" Content="Parallel" Grid.Row="0" HorizontalAlignment="Left" Margin="110,10,0,0" VerticalAlignment="Top" FontSize="36" Click="btnParallel1_Click"/>


        <ScrollViewer  HorizontalAlignment="Stretch" Grid.Row="1" VerticalAlignment="Stretch" >
            <TextBlock x:Name="txbInfo" TextWrapping="Wrap" Text="TextBlock" FontSize="24"/>
        </ScrollViewer>

    </Grid>
</Window>
